# Environment Configuration for Therapeutic Nutrition App

# Application Settings
NODE_ENV=production
PORT=5000

# AI API Keys (Required for food recognition and chatbot)
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Session Security
SESSION_SECRET=your_super_secret_session_key_change_in_production

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://nutrition_user:nutrition_password@postgres:5432/nutrition_app
PGHOST=postgres
PGPORT=5432
PGUSER=nutrition_user
PGPASSWORD=nutrition_password
PGDATABASE=nutrition_app

# Redis Configuration (Optional - for session storage)
REDIS_URL=redis://nutrition-redis:6379
REDIS_PASSWORD=nutrition_redis_pass

# Docker Registry (for deployment)
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=tarekt7
DOCKER_IMAGE_NAME=therapeutic-nutrition-app

# SSL Configuration (for HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_MONITORING=true

# Application Features
ENABLE_IMAGE_UPLOAD=true
ENABLE_VOICE_RECOGNITION=true
ENABLE_ACCESSIBILITY_FEATURES=true
DEFAULT_LANGUAGE=ar

# Rate Limiting
API_RATE_LIMIT=100
UPLOAD_RATE_LIMIT=10
MAX_FILE_SIZE=10485760

# Health Check
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5